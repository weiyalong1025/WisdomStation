<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/basic_gray7"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/basic_d6"
    android:paddingLeft="@dimen/basic_d10"
    android:paddingRight="@dimen/basic_d10"
    android:paddingTop="@dimen/basic_d6">

    <com.winsion.component.basic.view.CircleImageView
        android:id="@+id/civ_head"
        android:layout_width="@dimen/basic_d36"
        android:layout_height="@dimen/basic_d36"
        android:src="@drawable/basic_ic_head_single"
        app:civ_border_color="@color/basic_black6"
        app:civ_border_width="@dimen/basic_d0_5" />

    <TextView
        android:id="@+id/item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/basic_d12"
        android:textColor="@color/basic_blue1"
        android:textSize="@dimen/basic_s18"
        tools:text="1010" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/basic_d25"
        android:layout_height="@dimen/basic_d25"
        android:gravity="center_vertical"
        android:src="@drawable/basic_ic_delete"
        tools:ignore="ContentDescription" />
</LinearLayout>